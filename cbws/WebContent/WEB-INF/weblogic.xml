<?xml version="1.0" encoding="UTF-8"?>
<weblogic-web-app xmlns="http://xmlns.oracle.com/weblogic/weblogic-web-app">
<session-descriptor>

	<cookie-path>/ccmcb</cookie-path>
	<cookie-name>CCMCBESSIONID</cookie-name>
	<!-- <cookie-http-only>false</cookie-http-only> -->
	<cookie-secure>true</cookie-secure>
	<url-rewriting-enabled>false</url-rewriting-enabled>
	
	<!-- *** UNCOMMENT TO ENABLE WEBLOGIC REPLICATE SESSION TO DATABASE [START] ***  -->
	<persistent-store-type>jdbc</persistent-store-type>
    <persistent-store-pool>JDBCSESSION</persistent-store-pool>
    <persistent-store-table>WL_SERVLET_SESSIONS</persistent-store-table>
    <!-- *** UNCOMMENT TO ENABLE WEBLOGIC REPLICATE SESSION TO DATABASE [END]  ***  -->
    
    <!--  *** UNCOMMENT TO ENABLE SESSION SHARING ACROSS APPLICATIONS / CLUSTERS [START] ***-->
    <!-- This method not allowed for different admin server  -->
    <!-- 
    <sharing-enabled>true</sharing-enabled>
    <persistent-store-type>replicated_if_clustered</persistent-store-type>
     -->
    <!--  *** UNCOMMENT TO ENABLE SESSION SHARING ACROSS APPLICATIONS / CLUSTERS [END] ***-->
</session-descriptor>
<container-descriptor>
 <prefer-application-packages>
 	<package-name>com.ctc.wstx.*</package-name>  
     <package-name>org.codehaus.stax2.*</package-name>
 </prefer-application-packages>
 </container-descriptor>
</weblogic-web-app>


